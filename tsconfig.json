{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"outDir": "./build/",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["dom", "es2017"],
		"target": "es6"
	},
	"include": ["./src/*.ts"]
}
